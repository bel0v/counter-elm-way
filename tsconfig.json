{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "baseUrl": "./src/",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "jsx": "react",
    "strictNullChecks": true,
    "moduleResolution": "node",
    "noImplicitAny": true
   },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useCache": true
  }
}
