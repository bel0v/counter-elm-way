{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "jsx": "preserve",
    "strictNullChecks": true,
    "reactNamespace": "Inferno",
    "moduleResolution": "node",
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "types": [
      "inferno"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
